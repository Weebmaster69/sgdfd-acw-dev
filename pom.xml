<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>pe.edu.unmsm.sgdfd.acw</groupId>
    <artifactId>sgdfd-acw-dev</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <getdown.version>1.8.0</getdown.version>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                    <fork>true</fork>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <compilerArgs>
                        <arg>-Xlint</arg>
                        <arg>-Xlint:-serial</arg>
                        <arg>-Xlint:-path</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <!-- Getdown -->
            <plugin>
                <groupId>io.github.rockfireredmoon</groupId>
                <artifactId>getdown-maven-plugin</artifactId>
                <version>0.9.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>updates</goal>
                            <goal>stub</goal>
                            <goal>applet</goal>
                        </goals>
                        <configuration>
                        
                            <!-- This is the minimum required configuration, see below for more -->
                            <appbase>https://github.com/Weebmaster69/sgdfd-acw-client-master/releases/download/1.0</appbase>	
                            <libPath>lib</libPath>
                            <mainClass>pe.edu.unmsm.sgdfd.agd.app.Presentacion</mainClass>	
                            <outputJarVersions>false</outputJarVersions>
                            <verbose>true</verbose>
                            <ui>
                                <name>Asistente de Conexi√≥n Websocket (ACW)</name>
                                <!--OPTIONAL CONFIGURATION:-->
                                <icons>
                                    <icon>${basedir}/src/main/resources/images/myapp.png</icon>
                                </icons>
                            </ui>		
                        </configuration>
                    </execution>
                </executions>
            </plugin>
 
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nsis-maven-plugin</artifactId>
                <version>1.0-alpha-1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>generate-headerfile</goal>
                            <goal>make</goal>
                        </goals>
                        <configuration>
                            <!--Default Value: C:/Program Files/NSIS/makensis.exe-->
                            <!-- <makensisBin>C:\Program Files\NSIS\makensis.exe</makensisBin> -->
                            <!--The name of the installer-->
                            <makensisBin>C:\Program Files\NSIS\makensis.exe</makensisBin>
                            <scriptFile>src/main/nsis/installationConfiguration.nsi</scriptFile>
                            <outputFile>${project.name}-installer.exe</outputFile>
                            <!--Configures the NSIS installer. See NSIS documentation.-->
                            
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>pe.edu.unmsm.sgdfd.agd.app.Presentacion</mainClass>
                                </manifest>
                                <manifestEntries>
                                    <Permissions>all-permissions</Permissions>
                                    <Application-Name>agd</Application-Name>        
                                    <Built-By>UNMSM</Built-By>
                                </manifestEntries>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <outputDirectory>${project.build.directory}/acw</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- copy src/main/getdown/** into target/acw -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                <execution>
                    <id>copy-resources</id>
                    <phase>prepare-package</phase>
                    <goals>
                    <goal>copy-resources</goal>
                    </goals>
                    <configuration>
                    <outputDirectory>${project.build.directory}/acw</outputDirectory>
                    <resources>
                        <resource>
                        <directory>src/main/getdown</directory>
                        </resource>
                    </resources>
                    </configuration>
                </execution>
                </executions>
            </plugin>

            <!-- copy getdown.jar into target/acw -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                <execution>
                    <id>copy</id>
                    <phase>prepare-package</phase>
                    <goals>
                    <goal>copy</goal>
                    </goals>
                    <configuration>
                    <artifactItems>
                        <artifactItem>
                        <groupId>com.threerings.getdown</groupId>
                        <artifactId>getdown-launcher</artifactId>
                        <version>${getdown.version}</version>
                        <outputDirectory>${project.build.directory}/acw</outputDirectory>
                        <destFileName>getdown-new.jar</destFileName>
                        </artifactItem>
                    </artifactItems>
                    </configuration>
                </execution>
                </executions>
            </plugin>

            <!-- generate a digest.txt in target/acw -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                <execution>
                    <id>digest</id>
                    <phase>package</phase>
                    <configuration>
                    <target>
                        <taskdef name="digest" classname="com.threerings.getdown.tools.DigesterTask"
                                classpath="maven.plugin.classpath"/>
                        <digest appdir="${project.build.directory}/acw"/>
                    </target>
                    </configuration>
                    <goals>
                    <goal>run</goal>
                    </goals>
                </execution>
                </executions>
                <dependencies>
                <dependency>
                    <groupId>com.threerings.getdown</groupId>
                    <artifactId>getdown-ant</artifactId>
                    <version>${getdown.version}</version>
                </dependency>
                </dependencies>
            </plugin>
            
        </plugins>
    </build>
    
